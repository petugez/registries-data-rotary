{
    "$schema": "http://json-schema.org/schema#",
    "id": "uri://registries/roster#",
    "listFields": [
        {
            "field": "id",
            "title": "ID"
        },
        {
            "field": "baseData.name",
            "title": "Meno"
        },
        {
            "field": "baseData.surName",
            "title": "Priezvisko"
        },
        {
            "field": "baseData.birthDate",
            "title": "Dátum narodenia"
        },
        {
            "field": "contactInfo.city",
            "title": "Mesto"
        }
    ],
    "new": {
        "table": "rosters",
        "title": "Nová súpiska",
        "transCode":"schema.roster.new",
        "properties": {
            "baseData": {
                "title": "Základné údaje",
		        "transCode":"schema.roster.baseData",
                "type": "object",
                "properties": {
                    "prName": {
                        "title": "Názov družstva",
                        "transCode":"schema.roster.prName",
                        "type": "string",
                        "required": true
                    },
                    "club": {
                        "title": "Klub",
                        "transCode":"schema.roster.club",
                        "type": "object",
                        "$objectLink": {
                            "registry": "organizations",
                            "name": "club.name"
                        },
                        "required": true
                    },
                    "season": {
                        "title": "Súťažný ročnik",
                        "transCode":"schema.roster.season",
                        "required": true,
                        "$objectLink": {
                            "registry": "seasons",
                            "name": "baseData.name"
                        }
                    },
                    "gender": {
                        "title": "Pohlavie",
                        "transCode":"schema.people.gender",
                        "type": "string",
	                    "enum": [
	                    	"M",
	                    	"Z"
	                    ],
						"enumTransCodes":[
							"schema.people.gender.man",
							"schema.people.gender.woman"
						],
                        "required": true,
                        "render": {
                            "component": "psui-selectbox",
                            "searchable": true
                        }
                    },
                    "ageCategory": {
                        "title": "Veková kategória",
                        "transCode":"schema.roster.ageCategory",
                        "type": "object",
                        "$objectLink": {
                            "registry": "ageCategories",
                            "name": "baseData.name"
                        },
                        "required": true
                    },
                    "competition": {
                        "title": "Súťaž",
                        "transCode":"schema.roster.competition",
                        "required": true,
                        "$objectLink": {
                            "registry": "competitions",
                            "name": "baseData.name"
                        }
                    },
                    "lastModification": {
                        "title": "Dátum poslednej modifikácie",
                        "transCode":"schema.roster.lastModification",
                        "type": "string",
                        "required": false,
			            "readOnly": true,
                        "$timestamp" : true
                    }
                }
            },
            "coaches": {
                "title": "Tréneri",
                "transCode":"schema.roster.coaches",
                "type": "object",
                "properties": {
                    "coach": {
                        "title": "Tréner",
                        "transCode":"schema.roster.coach",
                        "type": "object",
                        "$objectLink": {
                            "registry": "people",
                            "surName": "baseData.surName",
                            "firstName": "baseData.name",
                            "license": "coach.coachLicense",
                            "licenseType": "coach.coachLicenseType"
                        },
                        "$objectLinkForcedCriteria": [
                            {
                                "f": "coach.isCoach",
                                "op": "eq",
                                "v": "Áno"
                            }
                        ]
                    },
                    "aCoach1": {
                        "title": "Asistent Trénera",
                        "transCode":"schema.roster.aCoach",
                        "type": "object",
                        "$objectLink": {
                            "registry": "people",
                            "surName": "baseData.surName",
                            "firstName": "baseData.name",
                            "license": "coach.coachLicense",
                            "licenseType": "coach.coachLicenseType"
                        },
                        "$objectLinkForcedCriteria": [
                            {
                                "f": "coach.isCoach",
                                "op": "eq",
                                "v": "Áno"
                            }
                        ]
                    },
                    "aCoach2": {
                        "title": "Asistent Trénera",
                        "transCode":"schema.roster.aCoach",
                        "type": "object",
                        "$objectLink": {
                            "registry": "people",
                            "surName": "baseData.surName",
                            "firstName": "baseData.name",
                            "license": "coach.coachLicense",
                            "licenseType": "coach.coachLicenseType"
                        },
                        "$objectLinkForcedCriteria": [
                            {
                                "f": "coach.isCoach",
                                "op": "eq",
                                "v": "Áno"
                            }
                        ]
                    },
                    "aCoach3": {
                        "title": "Asistent Trénera",
                        "transCode":"schema.roster.aCoach",
                        "type": "object",
                        "$objectLink": {
                            "registry": "people",
                            "surName": "baseData.surName",
                            "firstName": "baseData.name",
                            "license": "coach.coachLicense",
                            "licenseType": "coach.coachLicenseType"
                        },
                        "$objectLinkForcedCriteria": [
                            {
                                "f": "coach.isCoach",
                                "op": "eq",
                                "v": "Áno"
                            }
                        ]
                    },
                    "aCoach4": {
                        "title": "Asistent Trénera",
                        "transCode":"schema.roster.aCoach",
                        "type": "object",
                        "$objectLink": {
                            "registry": "people",
                            "surName": "baseData.surName",
                            "firstName": "baseData.name",
                            "license": "coach.coachLicense",
                            "licenseType": "coach.coachLicenseType"
                        },
                        "$objectLinkForcedCriteria": [
                            {
                                "f": "coach.isCoach",
                                "op": "eq",
                                "v": "Áno"
                            }
                        ]
                    },
                    "aCoach5": {
                        "title": "Asistent Trénera",
                        "transCode":"schema.roster.aCoach",
                        "type": "object",
                        "$objectLink": {
                            "registry": "people",
                            "surName": "baseData.surName",
                            "firstName": "baseData.name",
                            "license": "coach.coachLicense",
                            "licenseType": "coach.coachLicenseType"
                        },
                        "$objectLinkForcedCriteria": [
                            {
                                "f": "coach.isCoach",
                                "op": "eq",
                                "v": "Áno"
                            }
                        ]
                    }
                }
            },
            "listOfPlayers": {
                "title": "Zoznam hráčov",
                "transCode":"schema.roster.listOfPlayers",
                "type": "object",
				"render": {
					"width": "full"
				},
                "properties": {
                    "players": {
                        "title": "Hráči",
                        "transCode":"schema.roster.players",
                        "type": "array",
                        "items": {
                            "$objectLink": {
                                "registry": "people",
                                "surName": "baseData.surName",
                                "firstName": "baseData.name",
                                "birthDate": "baseData.birthDate",
                                "playerLicense": "player.playerLicense"
                            },
                            "required": true,
                            "_$objectLinkForcedCriteria": true,
                            "$objectLinkForcedCriteria": [
                                {
                                    "f": "player.isPlayer",
                                    "op": "eq",
                                    "v": "Áno"
                                }
                            ]
                        }
                    }
                }
            }
        }
    },
    "view": {
        "title": "Detail súpisky",
        "transCode":"schema.roster.view",
        "table": "rosters",
        "properties": {
	        "$ref": "uri://registries/roster#new/properties"
        }
    },
    "search": {
        "title": "Súpisky",
        "transCode":"schema.roster.search",
        "table": "rosters",
        "listFields": [
            {
                "field": "baseData.season.refData.name",
                "title": "Sezóna"
            },
            {
                "field": "baseData.competition.refData.name",
                "title": "Súťaž"
            },
            {
                "field": "baseData.club.refData.name",
                "title": "Klub"
            },
            {
                "field": "baseData.prName",
                "title": "Názov družstva"
            }
        ],
        "properties": {
            "$ref": "uri://registries/roster#new/properties"
        }
    }
}
